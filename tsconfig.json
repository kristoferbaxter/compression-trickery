{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./src/output",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}